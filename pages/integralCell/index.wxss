/* pages/IntegralCell/index.wxss */
page{
  background-color: #F4F4F4;
}
.bg{
  position: relative;
}
.header{
  margin: 0 auto;
  padding: 10px;
  overflow: hidden;
  background-color: #1F9546;
  height: 32px;
}
.header-c{
  text-align: center;
  /* height: 40px; */
  color: #fff;
  font-weight: bold;
  border-radius: 15px;
  background-color: rgba(255, 255, 255, 0.2);
}

.picker{
  text-align: center;
  border-radius: 15px;
}

.picker .text{
  background-color: #ffffff;
  color: rgba(61, 188, 103, 1);
  padding: 0 20px;
  display: inline;
  position: relative;
  text-align: left;
  padding-left: 10px;
  padding-right: 30px;
  border-radius: 5px;
  border: none;
}

.kailong{
  position: absolute;
	width:7px;
  height:7px;
  line-height: 40px;
	border-top: 2px solid rgba(177, 177, 177, 1);
  border-right: 2px solid rgba(177, 177, 177, 1);
  transform: rotate(45deg);
  top: 30%;
  right: 10px;
}

.title{
  font-size: 18px;
  text-align: center;
  height: 50px;
  line-height: 50px;
}
.list{
  margin: 0 auto;
  overflow: hidden;
}
.item{
  padding: 0 20px;
  background-color: #fff;
  margin: 10px 0;
  overflow: hidden;
  height: 50px;
  line-height: 50px;
}
.item-num{
  color: #FF782E;
  font-weight: bold;
}

.item-text{
  color: #666666;
  font-weight: bold;
}