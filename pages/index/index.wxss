/* banner组件 */
@import "components/banner/banner.wxss";

.title-notice{
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #ffffff;
  height: 25px;
  line-height: 25px;
  align-items: center;
}
.notice-left{
  float: left;
}
.notice-right{
  float: left;
  width: calc(100% - 70px);
  font-size: 14px;
  line-height: 25px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  vertical-align:middle;
}
.notice-btn{
  padding: 0 5px !important;
  border: none !important;
  display: inline-block;
  vertical-align:middle;
  font-size: 14px;
  height: 25px;
  line-height: 25px;
  background-color: rgba(240, 69, 70, 1);
  color: #ffffff;
  border-radius: 5px;
}
.notice-hr{
  padding: 0 10px;
  display: inline-block;
  vertical-align:middle;
  font-size: 14px;
}

.title-tools{
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #ffffff;
  align-items: center;
  overflow: hidden;
}
.tools-col{
  margin: 10px 0;
  width: 25%;
  text-align: center;
  display: inline-block;
}
.tools-image{
  width: 50px;
  height: 50px;
}
.tools-text{
  color: rgba(102, 102, 102, 1);
  font-weight: bold;
  font-size: 14px;
}
.title-brand{
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #ffffff;
  align-items: center;
  overflow: hidden;
}
.brand-list,.brand-text{
  overflow: hidden;
}
.brand-text{
  font-size: 14px;
  font-weight: bold;
}
.brand-col{
  margin: 5px 0;
  width: 33.3333333%;
  text-align: center;
  display: inline-block;
}
.brand-more{
  margin-top: 10px;
  text-align: center;
  font-size: 14px;
  color: rgba(102, 102, 102, 0.8);
}
.f-w{
  font-weight: bold;
}
.f-c{
  color: rgba(51, 51, 51, .8);
}
.c-r{
  color: rgba(239, 46, 46, 1) !important;
}
.c-g{
  color: rgba(13, 176, 155, 1) !important;
}